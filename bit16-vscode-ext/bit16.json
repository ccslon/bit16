
{
    "scopeName": "source.asm.bit16",
    "patterns": [
        {
            "include": "#op"
        },
        {
            "include": "#num"
        },
        {
            "include": "#string"
        },
        {
            "include": "#comment"
        },
        {
            "include": "#char"
        }
    ],
    "repository": {
        "op": {
            "patterns": [
                {
                    "name": "keyword.op",
                    "match": "\\b(MOV|ADD|SUB|CMP|MUL|DIV|NOT|NEG|OR|AND|XOR|SHL|SHR|LD|JR|JEQ|JNE|JGT|JLT|JGE|JLE|PUSH|POP|CALL|RET|HALT)\\b"
                }
            ]
        },
        "num": {
            "patterns": [
                {
                    "name": "constant.numeric",
                    "match": "\\b(0x|0b)?[0-9]+\\b"
                }
            ]
        },
        "string": {
            "patterns": [
                {
                    "name": "string.quoted.double",
                    "begin": "\"",
                    "end": "\""
                }
            ]
        },
        "comment": {
            "name":"comment.line.",
            "match": ";.*"
        },
        "char": {
            "name": "string.quoted.single",
            "begin": "'",
            "end": "'"
        }
    }
}